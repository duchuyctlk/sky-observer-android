<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="navigation_drawer_item_textview">
        <item name="android:background">?android:attr/activatedBackgroundIndicator</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItemSmall</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">@dimen/navigation_drawer_item_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/navigation_drawer_item_horizontal_padding</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="navigation_drawer_listview">
        <item name="android:layout_width">@dimen/navigation_drawer_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:background">@color/navigation_drawer_list_background_color</item>
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="week_day_title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/week_day_title_margin_top</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="equally_share_width_within_parent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="equally_share_width_within_parent_borderless_colored_button" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="equally_share_height_within_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="month_year_text_views" parent="equally_share_width_within_parent">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingStart">@dimen/fragment_horizontal_margin</item>
        <item name="android:paddingEnd">@dimen/fragment_horizontal_margin</item>
    </style>

    <style name="month_year_spinners" parent="equally_share_width_within_parent">
        <item name="android:layout_weight">1.5</item>
    </style>

    <style name="text_view_flight_direction">
        <item name="android:paddingTop">@dimen/text_view_flight_direction_padding_top</item>
        <item name="android:paddingBottom">@dimen/text_view_flight_direction_padding_bottom</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="choose_one_day_fragment_month_year_text_views" parent="month_year_text_views">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="choose_one_day_fragment_month_year_spinners" parent="month_year_spinners">
        <item name="android:layout_weight">2</item>
    </style>

    <style name="flight_with_best_price_label_text_views">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/grid_view_price_vertical_spacing</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>

    <style name="flight_with_best_price_value_text_views" parent="flight_with_best_price_label_text_views">
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">@dimen/list_view_prices_horizontal_spacing</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>
</resources>
