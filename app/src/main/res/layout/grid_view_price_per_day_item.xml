<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/grid_view_price_per_day_margin"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_view_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/price_per_day_day_color"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_price"
            style="@style/equally_share_width_within_parent"
            android:gravity="center"
            android:textColor="@color/price_per_day_price_color"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/image_view_airline"
            android:layout_width="0dp"
            android:layout_height="@dimen/image_view_price_per_day_airline_widtht"
            android:layout_weight="1"
            android:contentDescription="@string/string_holder"
            android:gravity="center" />
    </LinearLayout>
</LinearLayout>
