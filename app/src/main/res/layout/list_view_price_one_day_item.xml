<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/grid_view_price_per_day_margin"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_view_airline"
        android:layout_width="@dimen/image_view_price_per_day_airline_width"
        android:layout_height="@dimen/image_view_price_per_day_airline_width"
        android:contentDescription="@string/string_holder"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_depart_time"
            style="@style/equally_share_width_within_parent"
            android:gravity="center"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/text_arrive_time"
            style="@style/equally_share_width_within_parent"
            android:gravity="center"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_select_price"
            style="@style/equally_share_width_within_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>
